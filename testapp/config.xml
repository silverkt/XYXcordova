<?xml version='1.0' encoding='utf-8'?>
<widget id="com.tsingpost.www" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Yii</name>
    <description>
        Yii book
    </description>
    <author email="silver.sun@182.com" href="http://www.tsingpost.com">
        Silver Sun
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
   
    <platform name="android">
        <allow-intent href="market:*" />        
        <icon src="www/img/icon_512.png"  />
        <splash src="www/img/Default.png"  />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

</widget>
